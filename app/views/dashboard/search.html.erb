<div class="container">
  <div class="row search-result">
    <% @athletes.each do |athlete| %>

    <div class="col-md-10 col-xs-offset-1 well member">
      <%= athlete.full_name %>
      <%= link_to "follow", friendships_path(friend_id: athlete.id), method: :post,
              class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>
    </div>
    <% end %>
  </div>
  <%= will_paginate @athletes, renderer: BootstrapPagination::Rails %>
</div>
